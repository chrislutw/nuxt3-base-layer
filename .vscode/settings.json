{
  "i18n-ally.localesPaths": [
    "i18n/locales"
  ],
  "i18n-ally.displayLanguage": "en-US",
  "i18n-ally.keystyle": "nested",
  "eslint.enable": true,
  "eslint.format.enable": true,
  // Enable the ESlint flat config support
  "eslint.useFlatConfig": true,
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml"
  ],
  "css.lint.unknownAtRules": "ignore",
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "Vitesse",
    "Vite",
    "unocss",
    "vitest",
    "vueuse",
    "pinia",
    "demi",
    "antfu",
    "iconify",
    "intlify",
    "vitejs",
    "unplugin",
    "pnpm",
    "vetur",
    "windicss",
    "nuxt",
    "nuxtjs",
    "tailwindcss",
    "stylelint",
    "fontawesome",
    "qrcode",
    "swiper",
    "klona",
    "vuex",
    "tada",
    "protobuf"
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "package.json"
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    "active-class",
    "inactive-class",
    "ui"
  ],
  "tailwindCSS.experimental.configFile": ".playground/app/assets/css/main.css",
  "tailwindCSS.experimental.classRegex": [
    [
      "ui:\\s*{([^)]*)\\s*}",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "/\\*\\s?ui\\s?\\*/\\s*{([^;]*)}",
      ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "liveServer.settings.root": "/.output/public",
  "cSpell.ignoreWords": [
    "nuxt",
    "unocss",
    "vitesse",
    "vite",
    "vitest",
    "vueuse",
    "pinia",
    "demi",
    "antfu",
    "iconify",
    "intlify",
    "vitejs",
    "unplugin",
    "pnpm",
    "vetur",
    "windicss",
    "nuxt",
    "nuxtjs",
    "tailwindcss",
    "stylelint",
    "fontawesome",
    "qrcode",
    "swiper",
    "klona",
    "vuex",
    "tada",
    "protobuf",
    "defu",
    "ofetch"
  ]
}
